<h1>All Flights</h1>

<ul>
  <% @flights.each do |flight| %>
    <li><%= flight.number %> - <%= flight.airline.name %></li>
      <section id ="flight-<%= flight.id %>">
        <% flight.passengers.each do |passenger| %>
          <p><%= passenger.name %> <%= button_to "Remove Passenger", flight_passenger_path(flight, passenger), method: :delete %></p>
        <% end %>
      </section>
  <% end %>
</ul>